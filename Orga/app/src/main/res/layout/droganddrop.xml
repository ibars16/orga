    <TextView
        android:id="@+id/descripcio1joc6"
        android:layout_width="190dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="24dp"
        android:fontFamily="@font/happymonkey_regular"
        android:text=": Té milers de tubs i "
        android:textSize="@dimen/mida"
        app:layout_constraintBottom_toTopOf="@id/descripcio1_1joc6"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/descripcio1_1joc6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@id/opcio2joc6"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="20dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="20dp"
