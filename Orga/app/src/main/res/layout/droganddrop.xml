        android:layout_marginStart="20dp"
        android:textSize="@dimen/midaNormal"
        android:background="@drawable/my_border"
        android:tag="figura1"
        />


    <TextView
        android:id="@+id/descripcio4joc6"
        android:layout_width="wrap_content"
