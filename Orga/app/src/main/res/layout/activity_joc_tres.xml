<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:fontFamily="@font/happymonkey_regular"
    >

    <TextView
        android:id="@+id/descripciojoc3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="30dp"
        android:text="@string/joc3"
        android:layout_marginHorizontal="20dp"
        android:textSize="@dimen/midaNormal"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textColor="@color/border_color"
        android:fontFamily="@font/happymonkey_regular"
        android:paddingHorizontal="30dp" />


    <ImageView
        android:id="@+id/imagenJoc3"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        app:layout_constraintTop_toBottomOf="@+id/descripciojoc3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:src="@drawable/jocorgueantic"
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="40dp"
        />

    <TextView
        android:layout_marginTop="20dp"
        android:id="@+id/fallosJoc3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/imagenJoc3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="@string/fallos"
        android:textAlignment="center"
        android:textSize="@dimen/midaPetita"
        android:fontFamily="@font/happymonkey_regular"

        />

    <com.example.orga.MyImageView
        android:id="@+id/imagen2Joc3"
        android:layout_width="260dp"
        android:layout_height="280dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/drawing0"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/fallosJoc3" />

</androidx.constraintlayout.widget.ConstraintLayout>